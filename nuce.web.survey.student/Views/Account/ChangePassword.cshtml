@model nuce.web.survey.student.Models.ChangePassword
@{
    ViewData["Title"] = "Thay đổi mật khẩu";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a class="m-text-blue" href="/default">Trang chủ</a></li>
    <li class="breadcrumb-item" aria-current="page"><a class="m-text-blue" href="/survey/faculty">Khoa</a></li>
    <li class="breadcrumb-item active" aria-current="page">Đổi mật khẩu</li>
}

<section id="body" class="login-form">
    <div class="container mt-2">
        <div class="row">
            <div class="col-md-6 col-12 mt-0 d-flex">
                <div class="card w-100 h-100 m-box-shadow-right-bottom">
                    <h5 class="card-header">Đổi mật khẩu</h5>
                    <div class="card-body">
                        <form method="post" action="/account/changepassword" class="pb-2">
                            @Html.AntiForgeryToken()
                            <div class="form-group mb-2">
                                <label for="password" class="w-100">Mật khẩu cũ</label>
                                @Html.PasswordFor(m => m.Password, new { @placeholder = "Nhập mật khẩu", @class = "form-control custom-input" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "form-text", @style = "color: #F70000; height: 24px" })
                            </div>
                            <div class="form-group mb-2">
                                <label for="password" class="w-100">Mật khẩu mới</label>
                                @Html.PasswordFor(m => m.NewPassword, new { @placeholder = "Nhập mật khẩu mới", @class = "form-control custom-input" })
                                <span class="form-text" style="color: #F70000;">@ViewData["fail"]</span>
                                <span class="form-text" style="color: #11d147;">@ViewData["success"]</span>
                                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "form-text", @style = "color: #F70000; height: 24px" })
                            </div>
                            <button type="submit" class="btn m-bg-blue text-light w-100">
                                Đổi mật khẩu
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>