@using nuce.web.survey.student.Common;
@{
    ViewData["Title"] = "Trang khảo sát";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a class="m-text-blue" href="/default">Trang chủ</a></li>
    <li class="breadcrumb-item active" aria-current="page">Khảo sát</li>
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center text-dark mb-3">Danh sách bài khảo sát đánh giá chất lượng</h2>
        </div>
        <div class="col-12 mt-3">
            <table class="table m-table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">STT</th>
                        <th class="text-center">Môn học</th>
                        <th class="text-center">Giảng viên</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody id="table-thesurvey">
                </tbody>
            </table>
        </div>
    </div>

    <div id="undergraduate-thesurvey" class="row mt-4" style="display: none;">
        <div class="col-12">
            <h2 class="text-center text-dark mb-3">Danh sách bài khảo sát trước tốt nghiệp</h2>
        </div>
        <div class="col-12">
            <table class="table m-table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">STT</th>
                        <th class="text-center" width="75%">Bài khảo sát</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody id="table-undergraduate-thesurvey">
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let content = @Html.Raw(ViewData["TheSurvey"]);
        let tableContent = $('#table-thesurvey')
        let htmlStr = '';
        if (content.length === 0) {
            htmlStr = '<tr><td class="text-center" colspan="4"> Chưa có bài khảo sát </td></tr>';
        } else {
            let stt = 0;
            for (let element of content) {
                htmlStr += `
                    <tr>
                        <td class="text-center">${stt+=1}</td>
                        <td>${element.subjectName}</td>
                        <td>${element.lecturerName}</td>`;
                htmlStr += `<td class="text-center">`;
                if (element.status === @((int)SurveyStudentStatus.DoNot)) {
                    htmlStr += `<a href="/home/thesurvey?theSurveyId=${element.baiKhaoSatId}&classRoomCode=${element.classRoomCode}&type=1">Thực hiện</a>`;
                } else if (element.status === @((int)SurveyStudentStatus.Doing)) {
                    htmlStr += `<a href="/home/thesurvey?theSurveyId=${element.baiKhaoSatId}&classRoomCode=${element.classRoomCode}&type=2">Tiếp tục</a>`;
                } else if (element.status === @((int)SurveyStudentStatus.Done)) {
                    htmlStr += `Đã hoàn thành`;
                }
                htmlStr += `</td>`;
                htmlStr += `</tr>`;
            }
        }
        tableContent.html(htmlStr);
    </script>

    @if (ViewData["UndergraduateTheSurvey"] != null)
    {
        <script>
            $('#undergraduate-thesurvey').show();
            let undergraduateTheSurvey = @Html.Raw(ViewData["UndergraduateTheSurvey"]);
            let tableUndergraduate = $('#table-undergraduate-thesurvey');
            let htmlUndergraduate = '';
            let stt = 0;
            for (let element of undergraduateTheSurvey) {
                htmlUndergraduate += `
                    <tr>
                        <td class="text-center">${stt+=1}</td>
                        <td>${element.name}</td>`;
                htmlUndergraduate += `<td class="text-center">`;
                if (element.status === @((int)SurveyStudentStatus.DoNot)) {
                    htmlUndergraduate += `<a href="/home/undergraduatethesurvey?theSurveyId=${element.baiKhaoSatId}">Thực hiện</a>`;
                } else if (element.status === @((int)SurveyStudentStatus.Doing)) {
                    htmlUndergraduate += `<a href="/home/undergraduatethesurvey?theSurveyId=${element.baiKhaoSatId}">Tiếp tục</a>`;
                } else if (element.status === @((int)SurveyStudentStatus.Done)) {
                    htmlUndergraduate += `Đã hoàn thành`;
                }
                htmlUndergraduate += `</td>`;
                htmlUndergraduate += `</tr>`;
            }
            tableUndergraduate.html(htmlUndergraduate);
        </script>
    }
}