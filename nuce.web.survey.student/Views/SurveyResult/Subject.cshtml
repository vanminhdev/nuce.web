@using nuce.web.survey.student.Models.SurveyResult
@model List<KetQuaLopMonHocCuaMonHoc>

@{
    ViewData["Title"] = "Kết quả khảo sát hoạt động giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a class="m-text-blue" href="/default">Trang chủ</a></li>
    <li class="breadcrumb-item"><a class="m-text-blue" href="/survey/faculty">Khoa</a></li>
    <li class="breadcrumb-item active" aria-current="page">Kết quả khảo sát HĐGD</li>
}
<h5 class="text-center mb-3 m-text-blue">
    <span>
        @ViewBag.SubjectCode - @ViewBag.SubjectName
    </span>
</h5>

<div class="row">
    <div class="col-12">
        <table id="department-survey-result-datatable"
               class="table th-border-none">
            <thead>
                <tr>
                    <td>Lớp học phần</td>
                    <td>Số phiếu phát ra</td>
                    <td>Số phiếu thu về</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="/surveyresult/subjectclassroom?classRoomCode=@item.MaLop&subjectCode=@ViewBag.SubjectCode&surveyRoundId=@ViewBag.SurveyRoundId">
                                @(item.MaLop?.Replace(ViewBag.SubjectCode, ""))
                            </a>
                        </td>
                        <td>
                            @item.SoSVHoc
                        </td>
                        <td>
                            @item.SoSVLamKhaoSat
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {

}