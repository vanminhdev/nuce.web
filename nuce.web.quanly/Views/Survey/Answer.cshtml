@model nuce.web.quanly.Models.AnswerOfQuestion
@{
    ViewData["Title"] = "Đáp án";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-2">
    <a class="update-btn text-light p-2" style="text-decoration: none;" href="/survey/question">← Quay lại danh sách</a>

    <div class="fw-700 text-uppercase font-15-sm font-25 mb-2 mt-3 text-dark">
        Danh sách đáp án của câu hỏi
    </div>
    <h3 class="font-15-sm font-25 mb-2 mt-3 text-dark">
        @Html.Raw(Model.QuestionContent)
    </h3>
    <div class="row mb-3 d-flex justify-content-end">
        <div class="col-md-10">
        </div>
        <div class="col-md-2 d-flex justify-content-end">
            <a href="/survey/createanswer?questionId=@Model.QuestionId" class="btn btn-primary">Thêm đáp án</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table id="id-datatable" class="table table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">STT</th>
                        <th class="text-center">Mã</th>
                        <th class="text-center" style="min-width:300px;">Nội dung</th>
                        <th class="text-center">Thứ tự</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Answers.Count; i++)
                    {
                        <tr>
                            <td class="text-center">
                                @(i + 1)
                            </td>
                            <td class="text-center">
                                @Model.Answers[i].code
                            </td>
                            <td>
                                @Html.Raw(Model.Answers[i].content)
                            </td>
                            <td class="text-center">
                                @Model.Answers[i].order
                            </td>
                            <td class="text-center">
                                <a class="btn btn-outline-success" href='/survey/detailanswer?id=@Model.Answers[i].id&questionId=@Model.Answers[i].cauHoiId'>Sửa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
