@using nuce.web.quanly.Models
@model List<nuce.web.quanly.Models.CauHoi>
@{
    ViewData["Title"] = "Nội dung đề khảo sát";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid service-categories-wrp mt-2">
    <div class="row mb-4">
        <div class="col-12">
            <a class="update-btn text-light p-2" style="text-decoration: none;" href="/survey/examquestions">← Quay lại danh sách đề khảo sát</a>
        </div>
    </div>
    <div class="row">
        @if(Model.Count == 0)
        {
            <div class="col-12">
                <h2 class="text-center">Đề khảo sát trống</h2>
            </div>
        }

        @for (var i = 0; i < Model.Count; i++)
        {
            <div class="col-12">
                <h5>
                    Câu@(i + 1). @Html.Raw(HttpUtility.HtmlDecode(Model[i].Content))
                </h5>
                <p class="mb-1">Đáp án:</p>
                <div class="ml-4">
                    @for (int j = 1; j <= Model[i].SoCauTraLoi ; j++)
                    {
                        string str = (string)(Model[i].GetType().GetProperty($"A{j}").GetValue(Model[i]));
                        if (str != null)
                        {
                            <p>
                                @Html.Raw(HttpUtility.HtmlDecode(str))
                            </p>
                        }

                        if(j == 15)
                        {
                            break;
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>


