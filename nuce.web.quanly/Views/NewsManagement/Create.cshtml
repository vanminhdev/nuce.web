@section Scripts {
    <script>

        var state = {
            catId: @TempData.Peek("catId"),  
        };

        var onChangeFileUpload = function(e) {
            console.log(e.files[0]);
        };

        var onPostNewsItem = function() {
            let form = $('#form-data');
            if (!form.valid()) return;
            const content = CKEDITOR.instances["news-content"].getData();
            const title = $('#txtTitle').val();
            const description = $('#txtDescription').val();
            const body = {
                catId: state.catId,
                title,
                description,
                content,
                avatar: '',
                file: '',
            };
            callApiSaveNewsItem(body);
        };

        var callApiSaveNewsItem = function(body) {
            $('#loading-screen').show();
            const data = JSON.stringify(body);
            
            $.ajax({
                type: 'POST',
                url: `@Url.Action("CreateNewsItem", "NewsManagement")`,
                data,
                dataType: 'json',
                contentType: 'application/json',
                success: function(res) {
                    /*var file = document.getElementById('file').files[0];
                    if (file) {
                        callApiSaveAvatar(file);
                    }*/
                    $('#loading-screen').hide();
                },
            }).done(res => {
                if (res.StatusCode == 200) {
                    toastSuccess('Lưu thành công');
                } else {
                    toastError(res.Message || 'Lỗi hệ thống');
                }
            }).fail(err => {
                toastError('Lỗi hệ thống');
                $('#loading-screen').hide();
            });
        };

        var callApiSaveAvatar = function(file) {
            var formData = new FormData();
            // Attach file
            formData.append(file.type, file); 

            $.ajax({
                url: `/newsmanagement/uploadavatar?id=${state.cat}`,
                data: formData,
                type: 'POST',
                contentType: false, // NEEDED, DON'T OMIT THIS (requires jQuery 1.6+)
                processData: false, // NEEDED, DON'T OMIT THIS
                // ... Other options like success and etc
            });
        };

        var init = function() {
            CKEDITOR.replace('news-content');
            autoValidate();
        };

        init();
    </script>
}