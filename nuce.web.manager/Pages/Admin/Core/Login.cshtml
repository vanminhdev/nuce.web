@page "/admin/login"
@model nuce.web.manager.Pages.Admin.Core.LoginModel
@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = "Đăng nhập";
}

<section id="body" class="login-form">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="main-name font-20-sm font-32-md font-42 text-light mb-2">
                    hệ thống quản trị
                </div>
            </div>
            <form method="post" class="col-12 col-md-6 pb-2">
                <div class="form-group mb-1">
                    <label for="username" class="w-100 font-13-sm text-light">Tên đăng nhập</label>
                    <input asp-for="Input.Username" class="form-control custom-input" placeholder="Tên đăng nhập" />
                    <span asp-validation-for="Input.Username" class="form-text" style="color: #F70000; height: 24px"></span>
                </div>
                <div class="form-group mb-2">
                    <label for="password" class="w-100 font-13-sm text-light">Mật khẩu</label>
                    <input type="password" asp-for="Input.Password" class="form-control custom-input" placeholder="Mật khẩu" />
                    <span asp-validation-for="Input.Password" class="form-text" style="color: #F70000; height: 24px;"></span>
                </div>
                <button type="submit" class="btn w-100 text-light font-14-sm login-btn">
                    Đăng nhập
                </button>
            </form>
        </div>
    </div>
</section>

