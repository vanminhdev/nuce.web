@page "/admin/usermanager/index"
@model nuce.web.manager.Pages.Admin.Core.UserManager.IndexModel
@{
    ViewData["Title"] = "Quản lý tài khoản";
}

@section Style {
    <link rel="stylesheet" href="~/css/dataTables.bootstrap4.min.css" />
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-10">
            <div class="form-inline">
                <div class="form-group">
                    <label class="m-2 sr-only">Tên tài khoản</label>
                    <input class="form-control form-control" id="Username" type="text" placeholder="Tên tài khoản" />
                </div>
                <button id="btn-search" class="btn btn-secondary btn m-2">Tìm kiếm</button>
            </div>
        </div>
        <div class="col-md-2">
            <a href="/admin/usermanager/create" class="btn update-btn text-light w-100 m-2">Tạo tài khoản</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table id="user-datatable" class="table table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">
                            Tên tài khoản
                        </th>
                        <th class="text-center">
                            Email
                        </th>
                        <th class="text-center">
                            Số điện thoại
                        </th>
                        <th class="text-center" width="90">
                            Trạng thái
                        </th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/dataTables.config.js"></script>
    <script src="~/js/common/request.js"></script>
    <script>
        var api = '/api/User/GetAllUser';
        var tableId = 'user-datatable';
        var method = methodDictionary.POST;
        var columns = [
            {
                data: "username"
            },
            {
                data: "email"
            },
            {
                data: "phoneNumber"
            },
            {
                data: "status",
                className: "text-center",
                mRender: function (data, type, row) {
                    switch (data) {
                        case 1:
                            return '<span class="badge badge-pill badge-success">Mở khoá</span>';
                        case 2:
                            return '<span class="badge badge-pill badge-secondary">Bị khoá</span>';
                    }
                }
            },
            {
                data: null,
                mRender: function (data, type, row) {
                    return `<a href="/admin/usermanager/detail?userId=${data.id}" >Chi tiết</a>`;
                }
            }
        ];
        
        var searchUser = function() {
            userTable.column(0).search($("#Username").val()).draw();
        };
        var userTable = dataTableRequest.create(api, method, tableId, columns, function() {
            searchUser();
        });
        $("#btn-search").click(() => {
            searchUser();
        });
    </script>
}
