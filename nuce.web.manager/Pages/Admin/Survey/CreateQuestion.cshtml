@page
@model nuce.web.manager.Pages.Admin.Survey.CreateQuestionModel
@{
    ViewData["Title"] = "Thêm câu hỏi";
}

<div class="col-sm-12">
    <div style="padding-top: 5px; text-align: center; font-weight: bold; color: red;">
        @ViewData["ErrorMessage"]
    </div>
</div>
<form class="col-md-12 col-xs-12" method="post">
    <div class="form-group">
        <label for="ma">Mã:</label>
        <input asp-for="QuestionCreate.ma" class="form-control" type="number" />
        <span asp-validation-for="QuestionCreate.ma" class="text-danger" style="display: block;"></span>
    </div>
    <div class="form-group">
        <label for="noidung">Nội dung:</label>
        <textarea asp-for="QuestionCreate.content" class="form-control"></textarea>
        <span asp-validation-for="QuestionCreate.content" class="text-danger" style="display: block;"></span>
    </div>
    <div class="form-group">
        <label for="thutu">Loại câu hỏi:</label>
        <input asp-for="QuestionCreate.type" class="form-control" type="text" />
        <span asp-validation-for="QuestionCreate.type" class="text-danger" style="display: block;"></span>
    </div>
    <div class="form-group">
        <label for="thutu">Thứ tự:</label>
        <input asp-for="QuestionCreate.order" class="form-control" type="number" />
        <span asp-validation-for="QuestionCreate.order" class="text-danger" style="display: block;"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
        <a href="/admin/survey/question" class="btn btn-primary">Quay lại danh sách</a>
    </div>
</form>

@section Scripts {
    <script type="text/javascript" src="~/tiny_mce/tiny_mce.js"></script>
    <script type="text/javascript" language="javascript">
        tinyMCE.init({
            mode: "textareas"
        });
    </script>
}